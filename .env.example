# AgentZero Environment Configuration
# Copy this file to .env and update values as needed

# Application Settings
APP_NAME=AgentZero
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_PORT=8000
API_HOST=0.0.0.0
SECRET_KEY=your-secret-key-change-this-in-production

# Dashboard Settings
DASHBOARD_PORT=80
VITE_API_URL=/api/v1
VITE_WS_URL=/ws

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=agentzero
POSTGRES_USER=agentzero
POSTGRES_PASSWORD=changeme-in-production
DATABASE_URL=postgresql://agentzero:changeme-in-production@postgres:5432/agentzero

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme-in-production
REDIS_URL=redis://default:changeme-in-production@redis:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:80,http://localhost:5173

# Agent Configuration
PLANNING_AGENTS=1
EXECUTION_AGENTS=2
RESEARCH_AGENTS=1
CODE_AGENTS=1

# Hive Configuration
HIVE_ID=main-hive
DISTRIBUTION_STRATEGY=capability_based
MAX_TASK_RETRIES=3
TASK_TIMEOUT_SECONDS=300

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=admin-change-in-production

# External Services (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_MONITORING=true
ENABLE_AUTO_SCALING=false
ENABLE_TASK_PERSISTENCE=true

# Performance Settings
MAX_CONCURRENT_TASKS=100
WORKER_THREADS=4
CONNECTION_POOL_SIZE=20
CACHE_TTL_SECONDS=3600

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
TRUSTED_PROXIES=127.0.0.1
RATE_LIMIT_PER_MINUTE=100
MAX_REQUEST_SIZE=10485760

# Logging
LOG_FORMAT=json
LOG_OUTPUT=console
LOG_FILE_PATH=/app/logs/agentzero.log
LOG_MAX_SIZE=100M
LOG_MAX_BACKUPS=10
LOG_MAX_AGE=30