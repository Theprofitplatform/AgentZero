# AgentZero Production Environment Configuration
# FOR: agent.theprofitplatform.com.au

# Application Settings
APP_NAME=AgentZero
APP_ENV=production
DEBUG=false
LOG_LEVEL=WARNING

# Domain Configuration
DOMAIN=agent.theprofitplatform.com.au
ALLOWED_HOSTS=agent.theprofitplatform.com.au
CORS_ORIGINS=https://agent.theprofitplatform.com.au

# API Settings
API_PORT=8000
API_HOST=0.0.0.0

# IMPORTANT: Generate strong secrets for production!
# Use: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_STRONG_SECRET_KEY
JWT_SECRET_KEY=CHANGE_THIS_TO_STRONG_JWT_SECRET

# Database Configuration (PostgreSQL)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=agentzero_prod
POSTGRES_USER=agentzero_prod
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DATABASE_URL=postgresql://agentzero_prod:CHANGE_THIS_STRONG_PASSWORD@postgres:5432/agentzero_prod

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_URL=redis://default:CHANGE_THIS_REDIS_PASSWORD@redis:6379/0

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Agent Configuration
PLANNING_AGENTS=2
EXECUTION_AGENTS=3
RESEARCH_AGENTS=2
CODE_AGENTS=1

# Hive Configuration
HIVE_ID=prod-hive
DISTRIBUTION_STRATEGY=capability_based
MAX_TASK_RETRIES=5
TASK_TIMEOUT_SECONDS=600

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# SSL Configuration
SSL_CERT_EMAIL=admin@theprofitplatform.com.au
FORCE_SSL=true

# Performance Settings
MAX_CONCURRENT_TASKS=200
WORKER_THREADS=8
CONNECTION_POOL_SIZE=50
CACHE_TTL_SECONDS=7200

# Security Settings
RATE_LIMIT_PER_MINUTE=100
MAX_REQUEST_SIZE=10485760
SESSION_LIFETIME_HOURS=24
PASSWORD_MIN_LENGTH=12

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=agentzero-backups

# External Services (Optional - Add if needed)
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# GOOGLE_API_KEY=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASSWORD=

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_MONITORING=true
ENABLE_AUTO_SCALING=true
ENABLE_TASK_PERSISTENCE=true
ENABLE_ANALYTICS=true

# Logging Configuration
LOG_FORMAT=json
LOG_OUTPUT=file
LOG_FILE_PATH=/var/log/agentzero/app.log
LOG_MAX_SIZE=100M
LOG_MAX_BACKUPS=10
LOG_MAX_AGE=30